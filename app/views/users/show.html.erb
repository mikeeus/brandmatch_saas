<div class="row">
  <div class="col-md-3 text-center">
    <%= image_tag @user.profile.avatar.url, class: 'avatar-circle avatar-show' %>
  </div>
  <div class="col-md-6 whitebg">
    <h1 class="name-header"><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
    <div class="well profile-description profile-block">
      <h3>Description</h3>
      <%= @user.profile.description %>
    </div>

    <% if current_user.plan_id == 4 %>
      <div class="well contact-info profile-block">
        <h3>Contact Info</h3>
        <%= @user.profile.phone_number %><br/>
        <%= @user.profile.contact_email %><br/>
      </div>
    <% end %>
  </div>
</div>